{
  "name": "mbot-nodejs",
  "version": "0.0.0",
  "description": "NodeJS library to build chatbots for Facebook Messenger",
  "main": "src/mBot.js",
  "scripts": {
    "unit": "NODE_ENV=testing PORT=8443 nyc ava --verbose",
    "watch:unit": "NODE_ENV=testing PORT=8443 ava --watch --verbose",
    "report": "nyc report --reporter=html",
    "dev": "NODE_ENV=development PORT=8443 nodemon index"
  },
  "author": "Felipe L. S. Guzm√°n <contacto@lgsus.online>",
  "license": "GNU GPLv3",
  "dependencies": {
    "dotenv": "^4.0.0",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "nyc": "^10.3.2",
    "supertest": "^3.0.0",
    "unit.js": "^2.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "test/*.*"
    ],
    "verbose": true,
    "concurrency": 5,
    "failWithoutAssertions": false,
    "failFast": true
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
